<h1>New Prep</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @prep do |f| %>
      <div class="form-group">
        <%= f.label :letters %>
        <%= f.text_field :letters, class: 'form-control', placeholder: "Enter letters" %>
      </div>

      <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
