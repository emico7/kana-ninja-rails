<h1>New Question</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @question do |f| %>
      <div class="form-group">
        <%= f.label :image_file_name %>
        <%= f.text_field :image_file_name, class: 'form-control', placeholder: "Enter image file name" %>
      </div>

      <div class="form-group">
        <%= f.label :audio_file_name %>
        <%= f.text_field :audio_file_name, class: 'form-control', placeholder: "ex) house.m4a" %>
      </div>

      <div class="form-group">
        <%= f.label :answer %>
        <%= f.text_field :answer, class: 'form-control', placeholder: "Enter answer" %>
      </div>

      <div class="form-group">
        <%= f.label :letters %>
        <%= f.text_field :letters, class: 'form-control', placeholder: "Enter letters" %>
      </div>

      <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
